{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>

            <tr>
                <th>Category_id</th>
                <td>{{ product.category.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{% if not product.image is empty %}
                        <img src="{{ asset("uploads/image/#{product.image}") }}" width="170px" height="100px">
                    {% endif %}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ product.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }} VND</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ product.discount }} %</td>
            </tr>
            <tr>
                <th>Price_discount</th>
                <td>{{ product.priceDiscount }} VND</td>
            </tr>
            <tr>
                <th>Producer</th>
                <td>{{ product.producer }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ product.status }}</td>
            </tr>
            <tr>
                <th>Featured</th>
                <td>{{ product.featured }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
    <a href="{{ path('product_index') }}">back to list</a>




{% endblock %}
