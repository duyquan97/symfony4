{% extends 'base.html.twig' %}

{% block title %}New Product{% endblock %}

{% block body %}
    <h1>Create new Product</h1>
    <style>

    </style>
{#    {{ include('product/_form.html.twig') }}#}
    <div class="container">
        <form action="{{ path('product_store') }}"  enctype="multipart/form-data" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-groups">
                        <label for="">Name:</label>
                        <input class="form-control" type="text" placeholder="name" name="name" required>
                    </div>
                    <div class="form-groups">
                        <label for="">Price:</label>
                        <input class="form-control" type="number" placeholder="price" name="price" required>
                    </div>
                    <div class="form-groups">
                        <label for="">Category:</label>
                        <select name="category_id" class="form-control">
                            {% for item in categories %}
                            <option value="{{ item.id }}">{{ item.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="">Image</label>
                        <input type="file" name="image"  class="form-control" style="padding: unset">
                    </div>
                </div>
            </div>
            <div class="form-groups" style="padding-top: 10px">
                <button class="btn btn-success" type="submit">CREATE</button>
                <a href="{{ path('product_index') }}" class="btn btn-danger">back to list</a>
            </div>


        </form>
    </div>


{% endblock %}
