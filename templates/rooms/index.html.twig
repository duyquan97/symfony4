{% extends 'base.html.twig' %}

{% block title %}Rooms index{% endblock %}

{% block body %}
    <h1>Rooms index</h1>
    <div class="serach">
        <div class="row" style="padding-top: 10px">
            <div class="col-md-12">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group" >
                                    {{ form_row(form.keyWord) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    {{ form_row(form.type) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    {{ form_row(form.fromDate) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    {{ form_row(form.toDate) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="col-md-3" style="padding-top: 50px">
                            <div class="form-group">
                                <button type="submit" class="form-controll btn btn-success">Search <i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Name</th>
                <th>Province</th>
                <th>Price</th>
                <th>Discount</th>
                <th>Type</th>
                <th>Status</th>
                <th>Featured</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.code }}</td>
                <td>{{ room.name }}</td>
                <td>{{ room.province }}</td>
                <td>{{ room.price|number_format }}VND</td>
                <td>{{ room.discount }}%</td>
                <td>{{ room.type }}</td>
                <td>{{ room.status }}</td>
                <td>{{ room.featured }}</td>
                <td style="display: flex">
                    <a class="btn btn-success" href="{{ path('rooms_show', {'id': room.id}) }}"><i class="far fa-eye"></i></a>
                    {% if app.user and is_granted("ROLE_ADMIN") %}
                        |<a class="btn btn-primary" href="{{ path('rooms_edit', {'id': room.id}) }}"><i class="fas fa-edit"></i></a>|
                        {{ include('rooms/_delete_form.html.twig') }}
                    {%  endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="23">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if app.user and is_granted("ROLE_ADMIN") %}
        <a href="{{ path('rooms_new') }}">Create new</a>
    {%  endif %}
{% endblock %}
{% block javascripts %}
    <script >
        $(document).ready(function () {
            $("#search_fromDate, #search_toDate").datepicker({
                dateFormat: 'yy-mm-dd',
                minDate:'0D',
            });
        });
    </script>
{% endblock %}
