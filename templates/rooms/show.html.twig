{% extends 'base.html.twig' %}

{% block title %}Rooms{% endblock %}

{% block body %}
    <h1>Rooms</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ room.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ room.slug }}</td>
            </tr>
            <tr>
                <th>Province</th>
                <td>{{ room.province }}</td>
            </tr>
            <tr>
                <th>District</th>
                <td>{{ room.district }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ room.street }}</td>
            </tr>
            <tr>
                <th>Short Description</th>
                <td>{{ room.shortDescription }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ room.description | nl2br }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ room.image }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ room.price|number_format }}VND</td>
            </tr>
            <tr>
                <th>Weekend</th>
                <td>{{ room.weekend }}%</td>
            </tr>
            <tr>
                <th>Holiday</th>
                <td>{{ room.holiday }}%</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ room.discount }}%</td>
            </tr>
            <tr>
                <th>Service</th>
                <td>{% for service in room.service %}
                            <span class="badge badge-light">{{ service }}</span>
                    {% endfor %}</td></td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ room.type }}</td>
            </tr>
            <tr>
                <th>Maximum people</th>
                <td>{{ room.people }}</td>
            </tr>
            <tr>
                <th>Room Total</th>
                <td>{{ room.roomTotal }}</td>
            </tr>
            <tr>
                <th>Toilet</th>
                <td>{{ room.toilet }}</td>
            </tr>
            <tr>
                <th>Bed Room</th>
                <td>{{ room.bedRoom }}</td>
            </tr>
            <tr>
                <th>Room Booked</th>
                <td>{{ room.roomBooked }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ room.status }}</td>
            </tr>
            <tr>
                <th>Featured</th>
                <td>{{ room.featured }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('rooms_index') }}">back to list</a>

    <a href="{{ path('rooms_edit', {'id': room.id}) }}">edit</a>

    {{ include('rooms/_delete_form.html.twig') }}
{% endblock %}
