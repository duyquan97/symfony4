{% extends 'base.html.twig' %}

{% block title %}RoomDate index{% endblock %}

{% block body %}
    <h1>RoomDate index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Price</th>
                <th>Discount</th>
                <th>RoomCount</th>
                <th>RoomBooked</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room_date in room_dates %}
            <tr>
                <td>{{ room_date.id }}</td>
                <td>{{ room_date.date ? room_date.date|date('Y-m-d') : '' }}</td>
                <td>{{ room_date.price }}</td>
                <td>{{ room_date.discount }}</td>
                <td>{{ room_date.roomCount }}</td>
                <td>{{ room_date.roomBooked }}</td>
                <td>
                    <a href="{{ path('room_date_show', {'id': room_date.id}) }}">show</a>
                    <a href="{{ path('room_date_edit', {'id': room_date.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('room_date_new') }}">Create new</a>
{% endblock %}
