{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category</h1>
    <a class="btn btn-success" style="margin-bottom: 20px" href="{{ path('category_new') }}">Create new</a>

    <table class="table  table-striped" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.slug }}</td>
                <td >
                    <a class="btn btn-success" href="{{ path('category_show', {'id': category.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                    <div style="padding-top: 5px">{{ include('category/_delete_form.html.twig') }}</div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(categories) }}

{% endblock %}
